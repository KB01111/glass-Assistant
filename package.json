{
    "name": "pickle-glass",
    "productName": "Glass",
    "version": "0.1.0",
    "description": "Cl*ely for Free",
    "main": "src/index.js",
    "scripts": {
        "setup": "npm install && cd pickleglass_web && npm install && npm run build && cd .. && npm start",
        "start": "npm run build:renderer && electron-forge start",
        "package": "npm run build:renderer && electron-forge package",
        "make": "npm run build:renderer && electron-forge make",
        "build": "npm run build:renderer && electron-builder --config electron-builder.yml --publish never",
        "build:simple": "node scripts/simple-build.js",
        "build:reliable": "node scripts/reliable-build.js",
        "build:clean": "node scripts/clean-build.js",
        "build:force": "node scripts/force-build.js",
        "build:fix": "node scripts/fix-electron-build.js",
        "publish": "npm run build:renderer && electron-builder --config electron-builder.yml --publish always",
        "lint": "eslint --ext .ts,.tsx,.js .",
        "postinstall": "electron-builder install-app-deps",
        "build:renderer": "node build.js",
        "watch:renderer": "node build.js --watch",
        "test": "jest",
        "test:chat-history": "node tests/chat-history/runTests.js",
        "test:chat-history:verbose": "node tests/chat-history/runTests.js --verbose",
        "test:unit": "jest tests/chat-history/chatHistoryService.test.js",
        "test:integration": "jest tests/chat-history/chatHistoryUI.test.js",
        "test:coverage": "jest --coverage"
    },
    "keywords": [
        "glass",
        "pickle glass",
        "ai assistant",
        "real-time",
        "live summary",
        "contextual ai"
    ],
    "author": {
        "name": "Pickle Team"
    },
    "license": "Apache-2.0",
    "dependencies": {
        "@esbuild/win32-x64": "^0.25.5",
        "@huggingface/hub": "^2.4.0",
        "@huggingface/transformers": "^3.7.0",
        "@lancedb/lancedb": "^0.21.0",
        "@lancedb/lancedb-win32-x64-msvc": "^0.21.0",
        "axios": "^1.10.0",
        "chromadb": "^1.7.3",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "dotenv": "^17.0.0",
        "electron-deeplink": "^1.0.10",
        "electron-squirrel-startup": "^1.0.1",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.6.3",
        "express": "^4.18.2",
        "firebase": "^11.10.0",
        "firebase-admin": "^13.4.0",
        "jsonwebtoken": "^9.0.2",
        "node-fetch": "^2.7.0",
        "onnxruntime-node": "^1.17.0",
        "openai": "^4.74.0",
        "protobufjs": "^7.2.5",
        "react-hot-toast": "^2.5.2",
        "sharp": "^0.34.2",
        "sql.js": "^1.13.0",
        "sqlite3": "^5.1.7",
        "systeminformation": "^5.27.12",
        "wait-on": "^8.0.3",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.8.1",
        "@electron-forge/maker-deb": "^7.8.1",
        "@electron-forge/maker-dmg": "^7.8.1",
        "@electron-forge/maker-rpm": "^7.8.1",
        "@electron-forge/maker-squirrel": "^7.8.1",
        "@electron-forge/maker-zip": "^7.8.1",
        "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
        "@electron-forge/plugin-fuses": "^7.8.1",
        "@electron/fuses": "^1.8.0",
        "@electron/notarize": "^2.5.0",
        "electron": "^30.5.2",
        "electron-builder": "^26.0.12",
        "electron-reloader": "^1.2.3",
        "esbuild": "^0.25.5",
        "@jest/globals": "^29.7.0",
        "jest": "^29.7.0",
        "jsdom": "^24.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "setupFilesAfterEnv": [],
        "collectCoverageFrom": [
            "src/common/services/chatHistoryService.js",
            "src/main/handlers/chatHistoryHandlers.js",
            "src/features/chat-history/*.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": ["text", "lcov", "html"]
    }
}
